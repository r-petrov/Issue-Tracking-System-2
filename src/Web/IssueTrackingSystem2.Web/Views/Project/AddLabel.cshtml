@model ProjectLabelInputModel

@{
    ViewData["Title"] = "AddLabel";
}

<h1>AddLabel</h1>

<h4>ProjectLabelInputModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddLabel">
            <div class="form-group">
                <label asp-for="LabelId" class="control-label"></label>
                <select class="form-control text-success" id="user" asp-for="LabelId">
                    <option selected disabled>--- Select Project Leader ---</option>
                    @foreach (var label in (SelectList)this.ViewData[GlobalConstants.Labels])
                    {
                        <option value="@label.Value">@label.Text</option>
                    }
                </select>
                <span asp-validation-for="LabelId" class="text-danger"></span>
                <input asp-for="ProjectId" value="@Model.ProjectId" hidden />
            </div>
            <div class="form-group">
                <input asp-route-leaderId="@this.ViewData[GlobalConstants.LeaderId]"
                       type="submit"
                       value="@ValuesConstants.Add"
                       class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

